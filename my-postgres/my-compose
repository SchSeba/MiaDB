version: '2'
services:

  - pg-master:
     image: my-postgres
     env:
       - CLUSTER_NAME=pg_cluster
       - REPLICATION_DB=replication_db
       - REPLICATION_USER=replication_user
       - REPLICATION_PASSWORD=replication_pass
       - REPLICATION_PRIMARY_PORT=5432
       - NODE_ID={{SERVICE_COUNT}}
       - NODE_NAME=node{{SERVICE_COUNT}}
       - POSTGRES_PASSWORD={{POSTGRES_PASSWORD}}
       - POSTGRES_USER={{POSTGRES_USER}}
       - POSTGRES_DB={{POSTGRES_DB}}
       - INITIAL_NODE_TYPE=master
       - CLUSTER_NODE_NETWORK_NAME=pgnode{{SERVICE_COUNT}}
     mount:
       bind:
        data:
          - src={{BasePath}}/{{projectName}}/pgnode{{SERVICE_COUNT}}/data
          - dst=/var/lib/postgresql/data
        masterFile:
          - src={{BasePath}}/{{projectName}}/master
          - dst=/master
        archive:
          - src={{BasePath}}/{{projectName}}/pgnode{{SERVICE_COUNT}}/archive
          - dst=/var/lib/postgresql/archive
     name: pgnode{{SERVICE_COUNT}}


  - pg-slave:
     image: my-postgres
     env:
       - CLUSTER_NAME=pg_cluster
       - REPLICATION_DB=replication_db
       - REPLICATION_USER=replication_user
       - REPLICATION_PASSWORD=replication_pass
       - REPLICATION_PRIMARY_PORT=5432
       - NODE_ID={{SERVICE_COUNT}}
       - NODE_NAME=node{{SERVICE_COUNT}}
       - POSTGRES_PASSWORD={{POSTGRES_PASSWORD}}
       - POSTGRES_USER={{POSTGRES_USER}}
       - POSTGRES_DB={{POSTGRES_DB}}
       - INITIAL_NODE_TYPE=standby
       - CLUSTER_NODE_NETWORK_NAME=pgnode{{SERVICE_COUNT}}
     mount:
       bind:
        data:
          - src={{BasePath}}/{{projectName}}/pgnode{{SERVICE_COUNT}}/data
          - dst=/var/lib/postgresql/data
        masterFile:
          - src={{BasePath}}/{{projectName}}/master
          - dst=/master
        archive:
          - src={{BasePath}}/{{projectName}}/pgnode{{SERVICE_COUNT}}/archive
          - dst=/var/lib/postgresql/archive
     name: pgnode{{SERVICE_COUNT}}

  - pg-slave:
     image: my-postgres
     env:
       - CLUSTER_NAME=pg_cluster
       - REPLICATION_DB=replication_db
       - REPLICATION_USER=replication_user
       - REPLICATION_PASSWORD=replication_pass
       - REPLICATION_PRIMARY_PORT=5432
       - NODE_ID={{SERVICE_COUNT}}
       - NODE_NAME=node{{SERVICE_COUNT}}
       - POSTGRES_PASSWORD={{POSTGRES_PASSWORD}}
       - POSTGRES_USER={{POSTGRES_USER}}
       - POSTGRES_DB={{POSTGRES_DB}}
       - INITIAL_NODE_TYPE=standby
       - CLUSTER_NODE_NETWORK_NAME=pgnode{{SERVICE_COUNT}}
     mount:
       bind:
        data:
          - src={{BasePath}}/{{projectName}}/pgnode{{SERVICE_COUNT}}/data
          - dst=/var/lib/postgresql/data
        masterFile:
          - src={{BasePath}}/{{projectName}}/master
          - dst=/master
        archive:
          - src={{BasePath}}/{{projectName}}/pgnode{{SERVICE_COUNT}}/archive
          - dst=/var/lib/postgresql/archive
     name: pgnode{{SERVICE_COUNT}}

  - pgpool:
     image: pgpool
     env:
      - PCP_USER=pcp_user
      - PCP_PASSWORD=pcp_pass
      - REPLICATION_USER=replication_user
      - REPLICATION_PASSWORD=replication_pass
      - DB_USERS={{POSTGRES_USER}}:{{POSTGRES_PASSWORD}}
      - BACKENDS="0:pgnode1:5432:1:/var/lib/postgresql/data:ALLOW_TO_FAILOVER,1:pgnode2:5432:2:::ALLOW_TO_FAILOVER,"
      - CONFIGS="num_init_children:250,max_pool:4,search_primary_node_timeout:5"

     publish:
      - 5432:5432
      - 9898:9898

     name: pgpool


network: "{{OVERLAY_NETWORK}}"